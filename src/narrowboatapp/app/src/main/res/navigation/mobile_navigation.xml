<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_journey">

    <fragment
        android:id="@+id/navigation_journey"
        android:name="solace.narrowboat.ui.logbook.LogbookFragment"
        android:label="@string/title_journey"
        tools:layout="@layout/fragment_logbook" />

    <fragment
        android:id="@+id/navigation_explorer"
        android:name="solace.narrowboat.ui.explorer.ExplorerFragment"
        android:label="@string/title_explorer"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_voyage"
        android:name="solace.narrowboat.ui.voyage.VoyageFragment"
        android:label="@string/title_voyage"
        tools:layout="@layout/fragment_voyage" />
</navigation>